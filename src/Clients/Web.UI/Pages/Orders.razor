@page "/orders"
@inject IOrderingService OrderingService
@inject UserStateService UserStateService

<PageTitle>Siparişlerim</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4">Siparişlerim</h1>

    @if (orders == null)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
        </div>
    }
    else if (!orders.Any())
    {
        <div class="alert alert-info">
            Henüz siparişiniz bulunmamaktadır. <a href="/">Alışverişe başlamak için tıklayın</a>
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var order in orders)
            {
                <div class="list-group-item">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Sipariş #@order.Id.ToString().Substring(0, 8)</h5>
                        <small>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</small>
                    </div>
                    <p class="mb-1">
                        <span class="badge bg-@GetStatusColor(order.Status)">@order.Status</span>
                    </p>
                    <div class="mt-2">
                        <p class="mb-1">
                            <strong>@order.Items.Count ürün</strong> - 
                            Toplam: <strong class="text-primary">@((order.TotalPrice - order.Discount).ToString("C"))</strong>
                            @if (order.Discount > 0)
                            {
                                <span class="text-success">(İndirim: -@order.Discount.ToString("C"))</span>
                            }
                        </p>
                        <small class="text-muted">
                            Ürünler: @string.Join(", ", order.Items.Select(i => $"{i.ProductName} x{i.Quantity}"))
                        </small>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<OrderDto>? orders;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var userName = await UserStateService.GetUserNameAsync();
            orders = (await OrderingService.GetOrdersByUserAsync(userName)).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading orders: {ex.Message}");
            orders = new List<OrderDto>();
        }
    }

    private string GetStatusColor(string status)
    {
        return status.ToLower() switch
        {
            "pending" => "warning",
            "shipped" => "info",
            "delivered" => "success",
            "cancelled" => "danger",
            _ => "secondary"
        };
    }
}

@using Web.UI.Models

